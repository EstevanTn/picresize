{
    "name": "tunaqui/picresize",
    "type": "library",
    "description": "Library picture",
    "keywords": [
        "tunaqui",
        "picresize"
    ],
    "homepage": "https://github.com/tunaqui/picresize",
    "license": "MIT",
    "authors": [
        {
            "name": "EstevanTn",
            "email": "tunaqui@outlook.es",
            "homepage": "https://github.com/EstevanTn",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "intervention/image": "^2.4",
        "tunaqui/utils": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Tunaqui\\PicResize\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tunaqui\\PicResize\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
